<div>
  <ul class="pagination justify-content-center mt-3">
    {{#ifCond page '==' 1}}
    {{!-- <li class="page-item disabled">
      <a class="page-link" href="#">&laquo;&laquo;</a>
    </li> --}}
    {{else}}
    <li class="page-item">
      <a class="page-link" href="/activities-rosario/all/1">&laquo;&laquo;</a>
    </li>
    {{/ifCond}}
    {{#ifCond page '==' 1}}
    {{!-- <li class="page-item disabled">
      <a class="page-link" href="#">&laquo;</a>
    </li> --}}
    {{else}}
    <li class="page-item">
      <a class="page-link" href="/activities-rosario/all/{{susOne page}}">&laquo;</a>
    </li>
    {{/ifCond}}

    {{#each pages}}
    {{#ifCond page '==' n}}
    <li class="page-item disabled">
      <a class="page-link" href="/activities-rosario/all/{{n}}">{{n}}</a>
    </li>
    {{else}}
    <li class="page-item">
      <a class="page-link" href="/activities-rosario/all/{{n}}">{{n}}</a>
    </li>
    {{/ifCond}}
    {{/each}}

    {{#ifCond page '==' cantPages}}
    {{!-- <li class="page-item disabled">
      <a class="page-link" href="#">&raquo;</a>
    </li> --}}
    {{else}}
    <li class="page-item">
      <a class="page-link" href="/activities-rosario/all/{{addOne page}}">&raquo;</a>
    </li>
    {{/ifCond}}
    {{#ifCond page '==' cantPages}}
    {{!-- <li class="page-item disabled">
      <a class="page-link" href="#">&raquo;&raquo;</a>
    </li> --}}
    {{else}}
    <li class="page-item">
      <a class="page-link" href="/activities-rosario/all/{{cantPages}}">&raquo;&raquo;</a>
    </li>
    {{/ifCond}}
  </ul>
</div>